{
  "name": "gatsby-plugin-fathom",
  "version": "1.3.0",
  "description": "Gatsby plugin to add Fathom tracking to your site.",
  "author": "Lars Graubner <mail@larsgraubner.de> (https://larsgraubner.com)",
  "license": "MIT",
  "repository": "lgraubner/gatsby-plugin-fathom",
  "bugs": {
    "url": "https://github.com/lgraubner/gatsby-plugin-fathom/issues"
  },
  "homepage": "https://github.com/lgraubner/gatsby-plugin-fathom",
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "fathom",
    "analytics"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "dependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "@babel/cli": "7.10.1",
    "@babel/core": "7.10.2",
    "@babel/preset-env": "7.10.2",
    "@babel/preset-react": "7.10.1",
    "@babel/runtime": "7.10.2",
    "babel-eslint": "10.1.0",
    "cross-env": "5.2.0",
    "eslint": "7.2.0",
    "eslint-config-react-app": "3.0.4",
    "eslint-plugin-flowtype": "5.1.3",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.20.0",
    "husky": "4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "7.3.0",
    "prettier": "2.0.5"
  },
  "peerDependencies": {
    "gatsby": ">=2.0.0",
    "react": ">=16.0.0"
  },
  "scripts": {
    "build": "babel src --out-dir . --ignore __tests__",
    "prepublishOnly": "cross-env NODE_ENV=production npm run build",
    "lint": "eslint ./src/**/*.js",
    "format": "prettier --write 'src/**/*.js'",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": "last 4 versions, safari >= 7, ie >= 9"
        }
      ],
      "@babel/react"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "fathom": false
    }
  },
  "jest": {
    "transform": {
      ".js": "babel-jest"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "tagFormat": "${version}"
  }
}
